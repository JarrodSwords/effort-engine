<Window x:Class="SuperMarioRpg.Wpf.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:main="clr-namespace:SuperMarioRpg.Wpf.Main"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="640">
    <Window.InputBindings>
        <KeyBinding Key="B" Command="{Binding Path=BCommand}" />
    </Window.InputBindings>
    <Window.DataContext>
        <main:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <ContentControl Content="{Binding Path=ActiveViewModel}" />
    </Grid>
</Window>
